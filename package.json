{
  "name": "currency-converter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "e2e": "start-server-and-test 'pnpm build && pnpm preview' http://localhost:4173/ 'cypress open'",
    "e2e:silent": "start-server-and-test 'pnpm build && pnpm preview' http://localhost:4173/ 'cypress run'",
    "pre-commit": "tsc && eslint --config .eslintrc.cjs --max-warnings=0 && prettier ./src --write && pnpm coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "daisyui": "^2.38.0",
    "date-fns": "^2.29.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.1.16",
    "vite-plugin-svgr": "^2.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vitejs/plugin-react": "^2.2.0",
    "@vitest/coverage-c8": "^0.23.4",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.2.5",
    "cypress": "^10.11.0",
    "cypress-vite": "^1.2.1",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jsdom": "^20.0.2",
    "path": "^0.12.7",
    "postcss": "^8.4.18",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.7.1",
    "require-from-string": "^2.0.2",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.2.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vitest": "^0.24.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}